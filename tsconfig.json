{
  "compilerOptions": {
      "baseUrl": ".",
      "paths": {
          "@src/*": ["src/*"]
      },
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "rootDir": "./src",
      "outDir": "dist/scripts",
      "strict": true,
      "sourceMap": true,
      "jsx": "react",
      "lib": [
        "DOM",
        "DOM.Iterable"
      ],
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noEmitOnError": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "allowJs": true,
  },
  "include": [
    "src/**/*"
  ]
}
